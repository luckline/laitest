{
  "version": 2,
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "css/**", "use": "@vercel/static" },
    { "src": "img/**", "use": "@vercel/static" },
    { "src": "app.js", "use": "@vercel/static" },
    { "src": "app.html", "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "privacy.html", "use": "@vercel/static" },
    { "src": "terms.html", "use": "@vercel/static" },
    { "src": "security.html", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/css/(.*)", "destination": "/css/$1" },
    { "source": "/img/(.*)", "destination": "/img/$1" },
    { "source": "/app.js", "destination": "/app.js" },
    { "source": "/app", "destination": "/app.html"},
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
