{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/css/(.*)",
      "destination": "/css/$1"
    },
    { 
      "source": "/api/(.*)", 
      "destination": "/api/index.py" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/$1" 
    }
  ]
}
